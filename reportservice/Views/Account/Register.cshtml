@model Model.ReportService.RegisterModel

<h1></h1>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="well">
    <fieldset>
        <legend>Registration</legend>
        
            @Html.TextBoxFor(m => m.UserName, new { @class = "span4", @placeholder = "Username" })
       
            @Html.PasswordFor(m => m.Password, new { @class = "span4", @placeholder = "Password" })
       
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "span4", @placeholder = "Confirm Password" })
        
        
        <div><input type="submit" value="Register" class="btn btn-primary btn-large" /></div>
    </fieldset>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
