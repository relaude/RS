@model Model.ReportService.LoginModel

@{
    Layout = null;
}

<h1></h1>

@using (Html.BeginForm("JsonLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin", id = "loginForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
    <div class="well">
        <fieldset>
            <legend>Login</legend>
                @Html.TextBoxFor(m => m.UserName, new { @class = "span6", @placeholder = "Username" })
                @Html.PasswordFor(m => m.Password, new { @class = "span6", @placeholder = "Password" })
            <label class="checkbox">
                <div>@Html.CheckBoxFor(m => m.RememberMe)</div> Remember Me?
            </label>
            <div>
                <input type="submit" value="Log in" class="btn btn-primary btn-large" />
            </div>
            
        </fieldset>
    </div>
    <p>
        @Html.ActionLink("Register", "Register", null, new { @class = "btn btn-info" }) 
        if you don't have an account.
    </p>
}

<script type="text/javascript" src='@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")'></script>
<script type="text/javascript" src='@Url.Content("~/Scripts/jquery.validate.js")'></script>
<script type="text/javascript" src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")'></script>
